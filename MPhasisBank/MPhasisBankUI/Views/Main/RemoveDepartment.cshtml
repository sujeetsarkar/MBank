
@{
    ViewBag.Title = "RemoveDepartment";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<html>
<head>
    <link href="~/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>ViewBag.Title</title>
</head>
<body>
    
    <div class="container">
        <div class="row">
            <form method="post">
                <table class="tabbable" border="0" align="center" style="margin-top:100px">
                    @if (IsPost)
                    {
                        if (ViewBag.res)
                        {
                        <tr class="active">
                        <td align="center" colspan="2" style="color:green;align-content:center;font-size:medium;font-weight:bolder;">Removed Successfully</td>
                        </tr>
                        <tr><td>&nbsp;</td></tr>
                        }
                        else
                        {
                        <tr class="active">
                        <td align="center" colspan="2" style="color:red;align-content:center;font-size:medium;font-weight:bolder;">@ViewBag.resmsg</td>
                        </tr>
                        <tr><td>&nbsp;</td></tr>
                        }
                     }
                    <tr class="active">
                        <td colspan="2" align="center" style="color:cornflowerblue;font-size:medium;font-weight:bolder;align-content:center;">@ViewBag.Title</td>
                    </tr>
                    <tr class="active"><td>&nbsp;</td></tr>
                    <tr class="active">
                        <th style="font:bold;color:darkred">Department-ID</th>
                        <td><input type="text" name="pDeptId" required pattern="[A-Za-z]+[0-9]*" title="should start with atleast one letter followed by numbers" /></td>
                    </tr>
                    <tr class="active"><td>&nbsp;</td><td>&nbsp;</td></tr>
                    <tr class="active">
                        <td colspan="2" align="center"><input style="background-color:cornflowerblue" type="submit" value="Remove Department" /></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>

</body>
</html>